---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="hero">
  <div class="container">
    <div class="hero-badge">{t('hero.badge')}</div>
    <h1 class="hero-title">ralphy-spec</h1>
    <p class="hero-subtitle" set:html={t('hero.subtitle')}></p>
    
    <div class="hero-features">
      <div class="feature-item">
        <span class="feature-icon">ðŸ”„</span>
        <div class="feature-text">
          <span class="feature-name">Ralph Loop</span>
          <span class="feature-desc">{t('hero.ralphAdvantage')}</span>
        </div>
      </div>
      <div class="feature-item">
        <span class="feature-icon">ðŸ“‹</span>
        <div class="feature-text">
          <span class="feature-name">OpenSpec</span>
          <span class="feature-desc">{t('hero.openspecAdvantage')}</span>
        </div>
      </div>
      <div class="feature-item combined">
        <span class="feature-icon">âš¡</span>
        <div class="feature-text">
          <span class="feature-name">Ralphy-Spec</span>
          <span class="feature-desc">{t('hero.combinedAdvantage')}</span>
        </div>
      </div>
    </div>
    
    <div class="hero-actions">
      <a href="#setup" class="btn btn-primary">{t('hero.cta')}</a>
      <a href="https://github.com/wenqingyu/ralphy-openspec" target="_blank" rel="noopener" class="btn btn-secondary">
        {t('hero.viewSource')}
        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M2.5 9.5L9.5 2.5M9.5 2.5H4M9.5 2.5V8"/>
        </svg>
      </a>
    </div>

    <div class="hero-links">
      <a href={`/${lang}/changelog`}>{t('nav.changelog')}</a>
      <span class="sep">Â·</span>
      <a href={`/${lang}/docs/cli`}>{t('nav.cli')}</a>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 6rem 0 4rem;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }

  .hero-badge {
    display: inline-block;
    font-size: 11px;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 100px;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 600;
    letter-spacing: -0.04em;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .hero-subtitle {
    font-size: 14px;
    color: var(--color-text-secondary);
    max-width: 400px;
    margin: 0 auto 2.5rem;
    line-height: 1.7;
  }

  .hero-features {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    max-width: 520px;
    margin: 0 auto 2.5rem;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    text-align: left;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    transition: background 0.15s ease;
  }

  .feature-item:hover {
    background: var(--color-bg-secondary);
  }

  .feature-item.combined {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
  }

  .feature-icon {
    font-size: 1.25rem;
    line-height: 1;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .feature-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .feature-name {
    font-size: 13px;
    font-weight: 600;
    color: var(--color-text);
  }

  .feature-desc {
    font-size: 12px;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  .hero-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
  }

  .hero-links {
    margin-top: 1rem;
    font-size: 12px;
    color: var(--color-text-muted);
  }

  .hero-links a {
    color: var(--color-text-muted);
  }

  .hero-links a:hover {
    color: var(--color-text-secondary);
  }

  .sep {
    margin: 0 0.5rem;
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .hero { padding: 4rem 0 3rem; }
    .hero-title { font-size: 2rem; }
    .hero-subtitle { font-size: 13px; }
    .hero-actions { flex-direction: column; align-items: center; }
    .feature-item { padding: 0.625rem 0.75rem; }
  }
</style>
