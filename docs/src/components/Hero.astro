---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="hero">
  <div class="container">
    <div class="hero-badge">{t('hero.badge')}</div>
    <h1 class="hero-title">ralphy-spec</h1>
    <p class="hero-subtitle" set:html={t('hero.subtitle')}></p>
    
    <div class="hero-features">
      <div class="feature-line">
        <span class="feature-label">Ralph Loop</span>
        <span class="feature-desc">{t('hero.ralphAdvantage')}</span>
      </div>
      <div class="feature-line">
        <span class="feature-label">OpenSpec</span>
        <span class="feature-desc">{t('hero.openspecAdvantage')}</span>
      </div>
      <div class="feature-line highlight">
        <span class="feature-label">+</span>
        <span class="feature-desc">{t('hero.combinedAdvantage')}</span>
      </div>
    </div>
    
    <div class="hero-actions">
      <a href="#setup" class="btn btn-primary">{t('hero.cta')}</a>
      <a href="https://github.com/wenqingyu/ralphy-openspec" target="_blank" rel="noopener" class="btn btn-secondary">
        {t('hero.viewSource')}
        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M2.5 9.5L9.5 2.5M9.5 2.5H4M9.5 2.5V8"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 6rem 0 4rem;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }

  .hero-badge {
    display: inline-block;
    font-size: 11px;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 100px;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 600;
    letter-spacing: -0.04em;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .hero-subtitle {
    font-size: 14px;
    color: var(--color-text-secondary);
    max-width: 400px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }

  .hero-features {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-width: 480px;
    margin: 0 auto 2rem;
  }

  .feature-line {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0.75rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    font-size: 12px;
    text-align: left;
  }

  .feature-line.highlight {
    background: linear-gradient(135deg, rgba(161, 161, 170, 0.1), rgba(250, 250, 250, 0.05));
    border-color: var(--color-text-muted);
  }

  .feature-label {
    font-weight: 600;
    color: var(--color-text);
    min-width: 70px;
    flex-shrink: 0;
  }

  .feature-desc {
    color: var(--color-text-secondary);
  }

  .hero-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .hero { padding: 4rem 0 3rem; }
    .hero-title { font-size: 2rem; }
    .hero-subtitle { font-size: 13px; }
    .hero-actions { flex-direction: column; align-items: center; }
    .feature-line { font-size: 11px; }
    .feature-label { min-width: 60px; }
  }
</style>
