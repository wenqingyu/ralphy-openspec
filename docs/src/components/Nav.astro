---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguagePicker from './LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<nav class="nav">
  <div class="container nav-container">
    <a href={`/${lang}/`} class="nav-logo">ralphy-spec</a>
    
    <div class="nav-links">
      <a href={`/${lang}/docs/`}>{t('nav.docs')}</a>
      <a href={`/${lang}/changelog`}>{t('nav.changelog')}</a>
      <a href="https://github.com/wenqingyu/ralphy-openspec" target="_blank" rel="noopener">GitHub</a>
      <a href="https://www.npmjs.com/package/ralphy-spec" target="_blank" rel="noopener">npm</a>
      <LanguagePicker />
    </div>
  </div>
</nav>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: rgba(9, 9, 11, 0.85);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
    padding: 0.875rem 0;
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    font-weight: 600;
    font-size: 14px;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .nav-logo:hover {
    color: var(--color-text);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .nav-links a {
    color: var(--color-text-muted);
    font-size: 12px;
  }

  .nav-links a:hover {
    color: var(--color-text-secondary);
  }

  @media (max-width: 640px) {
    .nav-links {
      gap: 0.75rem;
    }
  }
</style>
